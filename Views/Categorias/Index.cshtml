@model IEnumerable<LivroASPdotNETMVC5.Models.Categoria>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=decive-width" />
        <title>Index</title>
    </head>
    <body>
        <p>
            @Html.ActionLink("Nova Categoria", "Create")
        </p>
        <table class="table">
            <!--Linha-->
            <tr>
                <!--Título-->
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>Opções</th>
            </tr>
            @foreach (var item in Model) {
                <!--Linha-->
                <tr>
                    <!--Conteúdo da Linha-->
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.ActionLink("Alterar", "Edit", new {id = item.CategoriaId}) |
                        @Html.ActionLink("Detalhes", "Details", new {id = item.CategoriaId}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.CategoriaId})
                    </td>
                </tr>
            }
        </table>
    </body>
</html>